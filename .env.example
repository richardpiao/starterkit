# Application
NODE_ENV=development
PUBLIC_APP_URL=http://localhost:3000

# Firebase Client (Public - safe to expose)
PUBLIC_FIREBASE_API_KEY=your-api-key-here
PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
PUBLIC_FIREBASE_PROJECT_ID=your-project-id
PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
PUBLIC_FIREBASE_APP_ID=1:your-sender-id:web:your-app-id
PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin (Server-only - NEVER expose)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Firebase Emulator (set to "true" to use emulators)
FIREBASE_EMULATOR=false

# WeChat Login & Pay
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret
WECHAT_MERCHANT_ID=your-wechat-merchant-id
WECHAT_API_KEY=your-wechat-api-key
WECHAT_API_V3_KEY=your-wechat-apiv3-key
WECHAT_SERIAL_NO=your-wechat-certificate-serial-number
WECHAT_PRIVATE_KEY_PATH=./certs/wechat-private-key.pem

# Alipay Login & Pay
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-alipay-private-key
ALIPAY_PUBLIC_KEY=your-alipay-public-key
ALIPAY_GATEWAY=https://openapi.alipay.com/gateway.do
ALIPAY_NOTIFY_URL=https://yourdomain.com/api/alipay/notify

# KakaoTalk Login & Kakao Pay
KAKAO_REST_API_KEY=your-kakao-rest-api-key
KAKAO_JAVASCRIPT_KEY=your-kakao-javascript-key
KAKAO_ADMIN_KEY=your-kakao-admin-key
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_REDIRECT_URI=https://yourdomain.com/api/auth/kakao/callback
KAKAO_CID=your-kakao-pay-cid
KAKAO_CID_SECRET=your-kakao-pay-cid-secret

# LINE Login
LINE_CHANNEL_ID=your-line-channel-id
LINE_CHANNEL_SECRET=your-line-channel-secret
LINE_REDIRECT_URI=https://yourdomain.com/api/auth/line/callback

# Stripe (Visa, Mastercard, etc.)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID=price_your-price-id

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id

# Apple Pay (via Stripe or direct)
APPLE_PAY_MERCHANT_ID=merchant.com.yourdomain
APPLE_PAY_CERTIFICATE_PATH=./certs/apple-pay-cert.pem

# Google Pay (via Stripe or direct)
GOOGLE_PAY_MERCHANT_ID=your-google-pay-merchant-id
GOOGLE_PAY_MERCHANT_NAME=Your Business Name

# OpenAI
OPENAI_API_KEY=sk-proj-your-openai-api-key
OPENAI_ORG_ID=org-your-organization-id
OPENAI_PROJECT_ID=proj_your-project-id

# Optional: Analytics, Error Tracking, etc.
# SENTRY_DSN=
# GA_TRACKING_ID=
